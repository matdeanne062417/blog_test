<h1>Create New Task</h1>
<%= form_with scope: :task, url: create_task_path, local: true do |f| %>
<p>
    <% if @task.errors.any? %>
        <ul id = "error_explanation">
            <% @task.errors.full_messages.each do |message| %>
             <li>
                <%= message%>
             </li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :details %>
    <%= f.text_area :details %>
</p>
<p>
    <%= f.label :deadline %>
    <%= f.datetime_field :deadline %>
</p>
<p>
    <%= f.label :started_at %>
    <%= f.date_field :started_at %>
</p>
<p>
    <%= f.label :completed_at %>
    <%= f.date_field :completed_at %>
</p>
<p>
    <%= f.label :started %>
    <%= f.check_box :started %>
</p>
<p>
    <%= f.label :completed %>
    <%= f.check_box :completed %>
</p>

<p>

    <%= f.submit %>

</p>

<% end %>

<%= link_to 'Back to Category',tasks_path %>