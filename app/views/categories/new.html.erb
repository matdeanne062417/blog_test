<h1>Create New Category</h1>
<%= form_with scope: :category, url: create_category_path, local: true do |f| %>
<p>
    <% if @category.errors.any? %>
        <ul id = "error_explanation">
            <% @category.errors.full_messages.each do |message| %>
             <li>
                <%= message%>
             </li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :description %>
    <%= f.text_area :description %>
</p>

<p>

    <%= f.submit %>

</p>

<% end %>

<%= link_to 'Back to Category',categories_path %>