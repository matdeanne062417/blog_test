<h1>Edit Page</h1>
<%= form_with scope: :category, url: update_category_path, method: :patch do |f| %>
<p>
    <% if @category.errors.any? %>
        <ul>
            <% @category.errors.full_messages.each do |message| %>
             <li>
                <%= message%>
             </li>
            <% end %>
        </ul>
    <% end %>
</p>

<p>
    <%= f.label :name %>
    <%= f.text_field :name %>
</p>

<p>
    <%= f.label :description %>
    <%= f.text_area :description %>
</p>

<p>

    <%= f.submit %>

</p>

<% end %>

<%= link_to 'Back',categories_path %>
